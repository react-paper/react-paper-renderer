{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2019", "dom"],
    "types": ["node", "jest"],
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
